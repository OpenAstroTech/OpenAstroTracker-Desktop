								</Grid>
							</Viewbox>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="ImageBorder" Property="BorderBrush" Value="#200" />
								<Setter TargetName="backgroundRect" Property="Fill" Value="#600000" />
								<Setter TargetName="colorGear" Property="Fill" Value="#C00" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style x:Key="AddSquareButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentedSquareButtonStyle}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border BorderBrush="#401111" BorderThickness="2" x:Name="ImageBorder" Height="24" Padding="1" Background="#800000">
							<Viewbox>
								<Grid>
									<Grid Name="backgroundGrid" Width="128" Height="128" Visibility="Visible">
										<Rectangle Fill="#FF800000" Visibility="Visible" x:Name="backgroundRect"/>
									</Grid>
									<Path Data="M12.126984,0L19.872009,0 19.872009,12.128 32,12.128 32,19.872999 19.872009,19.872999 19.872009,31.999 12.126984,31.999 12.126984,19.872999 0,19.872999 0,12.128 12.126984,12.128z"
										  x:Name="colorGear"
										  Stretch="Uniform" 
										  Fill="#E00" 
										  Width="116" 
										  Height="116" 
										  Margin="0,0,0,0" 
										  RenderTransformOrigin="0.5,0.5">
										<Path.RenderTransform>
											<TransformGroup>
												<TransformGroup.Children>
													<RotateTransform Angle="0" />
													<ScaleTransform ScaleX="1" ScaleY="1" />
												</TransformGroup.Children>
											</TransformGroup>
										</Path.RenderTransform>
									</Path>
								</Grid>
							</Viewbox>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="ImageBorder" Property="BorderBrush" Value="#200" />
								<Setter TargetName="backgroundRect" Property="Fill" Value="#600000" />
								<Setter TargetName="colorGear" Property="Fill" Value="#C00" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

	</Window.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Title -->
			<RowDefinition Height="Auto"/>
			<!-- Header -->
			<RowDefinition Height="*"/>
			<!-- ListBox -->
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Margin="0,0,0,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
			<TextBlock Text="Slew Positions"
               Style="{StaticResource TextBlockTitle}"
               MouseLeftButtonDown="TitleTextBlock_MouseLeftButtonDown"
               Cursor="SizeAll"
               VerticalAlignment="Center"/>
			<Button Grid.Column="1"
	            Style="{StaticResource AddSquareButtonStyle}"
				Margin="0,0,30,0"
			    Click="AddButton_Click"/>
			<Button Grid.Column="2"
	            Style="{StaticResource CloseSquareButtonStyle}"
			    Click="CloseButton_Click"/>
		</Grid>

		<Grid Grid.Row="1" Margin="0,0,0,2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="60"/>
				<ColumnDefinition Width="60"/>
				<ColumnDefinition Width="125"/>
			</Grid.ColumnDefinitions>
			<TextBlock Text="Name" Foreground="Red" FontWeight="Bold" Padding="4,0" />
			<TextBlock Text="RA" Foreground="Red" FontWeight="Bold" Padding="4,0" Grid.Column="1" TextAlignment="Center"/>
			<TextBlock Text="DEC" Foreground="Red" FontWeight="Bold" Padding="4,0" Grid.Column="2" TextAlignment="Center"/>
			<TextBlock Text="Actions" Foreground="Red" FontWeight="Bold" Padding="4,0" Grid.Column="3" TextAlignment="Center"/>
		</Grid>

		<ListBox x:Name="slewPointsList" Grid.Row="2"
			ItemsSource="{Binding SlewPoints}" 
			Background="#300" 
			BorderBrush="#900" 
			Foreground="White"
			Margin="0,0,0,0"
			HorizontalContentAlignment="Stretch"
			ItemContainerStyle="{StaticResource CustomListBoxItemStyle}"
			>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border BorderThickness="0,1,0,0" BorderBrush="#200"   Background="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Background}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="60"/>
								<ColumnDefinition Width="60"/>
								<ColumnDefinition Width="125"/>
							</Grid.ColumnDefinitions>
							<Grid>
								<Grid.Resources>
									<Style TargetType="TextBox">
										<Setter Property="MinWidth" Value="120"/>
									</Style>
								</Grid.Resources>
								<TextBlock x:Name="NameTextBlock"
									Text="{Binding Name}"
									Foreground="#B00"
									VerticalAlignment="Center"
									Padding="2,0"
									MinWidth="120"
									Visibility="{Binding IsEditing, Converter={StaticResource BoolToHide}}"/>
								<TextBox x:Name="NameTextBox"
									Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
									Style="{StaticResource TextBorder}"
									Background="#400" 
									Visibility="{Binding IsEditing, Converter={StaticResource BoolToShow}}"
									KeyDown="NameTextBox_KeyDown"
									LostFocus="NameTextBox_LostFocus"
									IsVisibleChanged="NameTextBox_IsVisibleChanged"/>
							</Grid>
							<TextBlock Text="{Binding RaStepperPosition}" Foreground="#B00" VerticalAlignment="Center" Grid.Column="1" TextAlignment="Center"/>
							<TextBlock Text="{Binding DecStepperPosition}" Foreground="#B00" VerticalAlignment="Center" Grid.Column="2" TextAlignment="Center"/>
							<StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
								<!-- Rename -->
								<Button Style="{StaticResource RenameSquareButtonStyle}" 
									ToolTip="Rename position"
									Command="{Binding DataContext.RenameCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
									CommandParameter="{Binding}" />
								<!-- Update64. -->
								<Button Style="{StaticResource UpdateSquareButtonStyle}" 
									ToolTip="Update Position from Mount"
									Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
									CommandParameter="{Binding}" 
									/>
								<!-- Go To -->
								<Button Style="{StaticResource GotoSquareButtonStyle}" 
									ToolTip="Slew Mount to this position"
									Command="{Binding DataContext.GoToCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
									CommandParameter="{Binding}" 
									/>
								<!-- Remove (Delete) -->
								<Button Style="{StaticResource DeleteSquareButtonStyle}" 
									Margin="12,0,0,0"
									ToolTip="Delete this position"
									Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
									CommandParameter="{Binding}" />
							</StackPanel>
						</Grid>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Window>
